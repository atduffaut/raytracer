{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 build active file",
            "command": "/opt/homebrew/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/opt/local/include",
                "-L",
                "/opt/local/lib",
                "-framework",
                "OpenGL",
                "-lglew",
                "-lglfw"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}